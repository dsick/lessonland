<div class="row">
	<div class="col-md-6">
		<h2><%= @lesson.name %></h2>
		<p><%= @lesson.description %> </p>
	</div>
<% unless @user.purchases.exists? lesson_id: @lesson.id %>
	<div class="col-md-1">
	  <%= stripe_charge_button(@lesson) %>
	</div>
<% end %>
</div>
<% if @user.purchases.exists? lesson_id: @lesson.id %>
	<%= render partial: 'lesson_steps/lesson_steps' %>
<% else %>
	<div class="row lesson-step">
		<div class="col-md-8">
			<%= image_tag("lesson_preview.png", alt: "lesson preview", class: "preview-lesson") %>
		</div>
	</div>
<% end %>	
	
